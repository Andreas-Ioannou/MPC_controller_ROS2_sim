<!--
  This Behavior Tree replans the global path periodically at 1 Hz, and has
  recovery actions. Based on the official Nav2 package example.
-->
<root main_tree_to_execute="MainTree" BTCPP_format="4">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="6" name="NavigateRecovery">
      <PipelineSequence name="NavigateWithReplanning">

        <RateController hz="1.0">
          <RecoveryNode number_of_retries="1" name="ComputePathToPose">
            <ComputePathToPose goal="{goal}" path="{path}" planner_id="GridBased"/>
            <ClearEntireCostmap service_name="global_costmap/clear_entirely_global_costmap"/>
          </RecoveryNode>
        </RateController>

        <!-- Select controller at runtime (topic-driven) -->
        <ControllerSelector
          selected_controller="{selected_controller}"
          default_controller="DWB"
          topic_name="controller_selector"/>

        <RecoveryNode number_of_retries="1" name="FollowPath">
          <!-- Use the selected controller -->
          <FollowPath path="{path}" controller_id="{selected_controller}"/>
          <ClearEntireCostmap service_name="local_costmap/clear_entirely_local_costmap"/>
        </RecoveryNode>

      </PipelineSequence>

      <Sequence name="RecoveryActions">
        <ClearEntireCostmap service_name="local_costmap/clear_entirely_local_costmap"/>
        <ClearEntireCostmap service_name="global_costmap/clear_entirely_global_costmap"/>
        <Spin spin_dist="1.57"/>
        <Wait wait_duration="5"/>
      </Sequence>
    </RecoveryNode>
  </BehaviorTree>
</root>
